<h1>Subscribe</h1>

<%= form_tag subscription_path, id: "payment-form" do %>
    <span class="payment-errors"></span>
    
    <div class="form-row">
        <label>
            <span>Card Number</span>
            <input type="text" size="20" value="4242 4242 4242 4242" data-stripe="number">
        </label>
    </div>
    <div class="form-row">
        <label>
            <span>Expiration (MM/YY)</span>
            <input type="text" size="2" value="12" data-stripe="exp_month">
        </label>
        <span>/</span>
        <input type="text" size="2" value="20" data-stripe="exp_year">
    </div>
    <div class="form-row">
        <label>
            <span>CVC</span>
            <input type=text size="4" value="123" data-stripe="cvc">
        </label>
    </div>
    
    <%= hidden_field_tag :plan, params[:plan] %>
    
    <input type="submit" class="submit" value="Submit Payment">
<% end %>