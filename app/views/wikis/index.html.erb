<h1>Wiki Master Page</h1>
<div class = "row">
    <div class = "col-sm-8">
        <% if current_user %>
            <% if current_user && current_user.standard? %>
                <% @wikis.each do |wiki| %>
                    <% if wiki.private == nil || wiki.private == false %>
                        <div class="media">
                            <div class="media-body">
                                <h4 class="media-heading">
                                    <p><%= link_to wiki.title, wiki %></p>
                                </h4>
                            </div>
                        </div>
                    <% end %>
                <% end %>
            <% else %>
                <% @wikis.each do |wiki| %>
                    <div class="media">
                        <div class="media-body">
                            <h4 class="media-heading">
                                <p><%= link_to wiki.title, wiki %></p>
                            </h4>
                        </div>
                    </div>
                <% end %>
            <% end %>   
        <% else %>
            <h3>Sign up to view our wikis!</h3>
        <% end %>    
    </div>
    <div class = "col-sm-2">
            <%= link_to "New Wiki", new_wiki_path, class: 'btn btn-primary' %>
        <% if current_user.standard? %>
            <%= link_to "Upgrade Now!", new_subscription_path(plan: "monthly"), class: "btn btn-primary" %>
        <% end %>
    </div>
</div>
